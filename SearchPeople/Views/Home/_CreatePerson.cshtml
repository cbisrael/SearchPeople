                                    listItems.Add(new ListItem { Text = "WY", Value = "WY" });
                                }
                                @Html.DropDownList("upd_state", new SelectList(listItems, "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-horizontal">
                        @Html.Label("Age:", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="form-group">
                            <div class="col-md-2">
                                <input id="upd_age" name="upd_age" class="form-control" type="number" />
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        @Html.Label("Interests:", htmlAttributes: new { @class = "control-label col-md-4" })
